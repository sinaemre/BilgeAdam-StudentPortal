@{
    ViewData["Title"] = "Index";
}
@model List<GetClassroomVM>

<div class="row mt-2">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sınıflarım</h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive">
                    <table class="table table-hover myTable ">
                        <thead>
                            <tr>
                                <th>Sınıf</th>
                                <th>Açıklama</th>
                                <th>Öğrenci Sayısı</th>
                                <th>Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var classroom in Model)
                            {
                                <tr>
                                    <td>@classroom.Name</td>
                                    <td>@classroom.Description</td>
                                    <td>@classroom.ClassroomSize</td>
                                    <td>
                                        <a asp-action="GetStudentsByClassroomId" asp-route-classroomId="@classroom.Id" class="btn btn-outline-success">
                                            <i class="fa-regular fa-eye "></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

