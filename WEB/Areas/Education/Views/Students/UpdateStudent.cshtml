@{
    ViewData["Title"] = "Update Student";
}
@model UpdateStudentVM

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Öğrenci Güncelle</h3>
            </div>
            <form asp-action="UpdateStudent" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="UpdatedDate" />
                <input type="hidden" asp-for="ImagePath" />
                <div class="card-body">
                    <div class="d-flex">
                        <div class="mx-2">
                            <label asp-for="Image"></label>
                            <input id="uploadStudentImage" asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div>
                            <img id="imageStudent" width="200" height="150" class="rounded-circle justify-content-center" src="~/img/@Model.ImagePath" />
                        </div>
                    </div>
                    <div>
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="BirthDate" class="form-label"></label>
                        <input type="date" asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="RegisterPrice" class="form-label"></label>
                        <input asp-for="RegisterPrice" class="form-control" />
                        <span asp-validation-for="RegisterPrice" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="CourseId" class="form-label"></label>
                        <select asp-items="Model.Courses" onchange="loadTeachersByCourseId(this.value,'teacher-select-student-update', 'classroom-select-student-update')" asp-for="CourseId" asp-items="Model.Courses" class="form-control">
                            <option disabled value="0">Lütfen kurs seçiniz!</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="TeacherId" class="form-label"></label>
                        <select asp-items="Model.Teachers" onchange="loadClassroomsByTeacherId(this.value, 'classroom-select-student-update')" id="teacher-select-student-update" asp-for="TeacherId" class="form-control">
                        </select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="ClassroomId" class="form-label"></label>
                        <select asp-items="Model.Classrooms" id="classroom-select-student-update" asp-for="ClassroomId" class="form-control">
                        </select>
                        <span asp-validation-for="ClassroomId" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between" style="height:50px;">
                    <a class="btn btn-outline-dark" asp-action="Index">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log($("#teacher-select-student-update"))
    </script>
}
