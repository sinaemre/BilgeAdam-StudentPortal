@{
    ViewData["Title"] = "Create Password";

}
@model CreatePasswordVM

<video autoplay muted loop id="bg-video" style="max-height:100%;">
    <source src="~/assets/images/course-video.mp4" type="video/mp4" />
</video>

<div class="video-overlay header-text position-absolute ">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <!-- Login 6 - Bootstrap Brain Component -->
                <section class="p-3 p-md-4 p-xl-5" style="margin-top:100px">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                                <div style="background:transparent;">
                                    <div class="p-3 p-md-4 p-xl-5">

                                        <form asp-action="CreatePassword">
                                            <input type="hidden" asp-for="Token" />
                                            <input type="hidden" asp-for="Email" />
                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input type="password" asp-for="OldPassword" style="background:transparent; color:white" class="form-control">
                                                        <label asp-for="OldPassword" style="background:transparent; color:white" class="form-label">Eski Şifre</label>
                                                        <span asp-validation-for="OldPassword" style="background:transparent;" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input type="password" asp-for="NewPassword" style="background:transparent; color:white" class="form-control">
                                                        <label asp-for="NewPassword" style="background:transparent; color:white" class="form-label">Yeni Şifre</label>
                                                        <span asp-validation-for="NewPassword" style="background:transparent;" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input type="password" asp-for="CheckNewPassword" style="background:transparent; color:white" class="form-control">
                                                        <label asp-for="CheckNewPassword" style="background:transparent; color:white" class="form-label">Yeni Şifre Tekrar</label>
                                                        <span asp-validation-for="CheckNewPassword" style="background:transparent;" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn bsb-btn-2xl btn-outline-success" type="submit">Kaydet</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
