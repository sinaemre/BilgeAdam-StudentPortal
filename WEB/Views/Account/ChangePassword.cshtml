@model ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Şifre Değiştir</h3>
            </div>
            <form asp-action="ChangePassword">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div>
                        <label asp-for="OldPassword" class="form-label"></label>
                        <input type="password" asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input type="password" asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="CheckNewPassword" class="form-label"></label>
                        <input type="password" asp-for="CheckNewPassword" class="form-control" />
                        <span asp-validation-for="CheckNewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer" style="height:50px;">
                    <button type="submit" class="btn btn-outline-success w-100 my-2">Kaydet</button>
                    <a class="btn btn-outline-primary d-block" asp-controller="Account" asp-action="Edit User">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
